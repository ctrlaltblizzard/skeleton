#== Set cursor theme 

seat seat0 xcursor_theme Skyrim-by-ru5tyshark-cursors 32

#== Launch Waybar

bar {
  swaybar_command waybar
}

#== Set border colors

client.focused            #225877 #225877 #225877 #225877 #225877
